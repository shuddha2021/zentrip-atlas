# =============================================================================
# ZenTrip Atlas - Environment Variables
# =============================================================================
# Copy this file to .env.local for local development
# For Vercel: Add these in Project Settings > Environment Variables

# -----------------------------------------------------------------------------
# DATABASE (required)
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Local: postgresql://YOUR_USERNAME@localhost:5432/zentrip_atlas
# Neon:  postgresql://user:pass@ep-xxx.region.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=

# -----------------------------------------------------------------------------
# SEO / INDEXING
# -----------------------------------------------------------------------------
# Set to "true" to block search engines (robots.txt disallow all)
# Vercel auto-sets this for Preview deployments; Production should be "false"
NOINDEX=true

# Your production URL (for OG images, sitemap, canonical URLs)
# Example: https://zentrip-atlas.vercel.app
NEXT_PUBLIC_SITE_URL=

# -----------------------------------------------------------------------------
# ADMIN
# -----------------------------------------------------------------------------
# Secret key to access /admin/analytics - if not set, page returns 404
ADMIN_SECRET=

# -----------------------------------------------------------------------------
# AFFILIATE TRACKING (optional)
# -----------------------------------------------------------------------------
# Set these to enable affiliate links with tracking
AFFILIATE_SKYSCANNER_ID=
AFFILIATE_BOOKING_ID=

# -----------------------------------------------------------------------------
# EMAIL (optional)
# -----------------------------------------------------------------------------
# If not set, emails are logged to console in development
RESEND_API_KEY=
EMAIL_FROM=
# Set to "true" to require email confirmation in production
EMAIL_CONFIRM_REQUIRED=
